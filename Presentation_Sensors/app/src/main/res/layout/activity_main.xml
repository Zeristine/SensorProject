<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensors Demo"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List of sensor"
        android:onClick="clickToShowSensors"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Luminosity Detector"
        android:onClick="clickToLumiDetect"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proximity Detector"
        android:onClick="clickToProxiDetect"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thermometer"
        android:onClick="clickToThermometer"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:onClick="clickToHumidity"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pressure Measure"
        android:onClick="clickToPressure"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer"
        android:onClick="clickToAccelerometer"/>
</LinearLayout>